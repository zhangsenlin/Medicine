        android:id="@+id/center_top"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#fff8dc"
        android:layout_marginTop="15dp">
        <LinearLayout 
            android:onClick="onClick"
            android:id="@+id/classifymedicine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView 
                android:layout_marginTop="15dp"
                android:id="@+id/image_classify_medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/classify"
                android:layout_gravity="center_horizontal"/>
            <TextView 
                android:id="@+id/text_classify_medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="疾病分类"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"/></LinearLayout>
        
        <LinearLayout 
            android:onClick="onClick"
            android:id="@+id/commonmedicine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView 
                android:layout_marginTop="15dp"
                android:id="@+id/image_common_medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_common"
                android:layout_gravity="center_horizontal"/>
            <TextView 
                android:id="@+id/text_common_medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常用药品"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"/></LinearLayout>
        
        <LinearLayout
            android:onClick="onClick" 
            android:id="@+id/partmedicine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView 
                android:layout_marginTop="15dp"
                android:id="@+id/image_part_medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/classify"
                android:layout_gravity="center_horizontal"/>
            <TextView 
                android:id="@+id/text_part_medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="部位药品"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"/></LinearLayout>
    </LinearLayout>

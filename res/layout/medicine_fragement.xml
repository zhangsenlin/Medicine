	            android:id="@+id/doctor_top_search"
	            android:layout_centerVertical="true" 
	            android:layout_width="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_height="wrap_content"
	            android:src="@drawable/search_common"/>
	        <LinearLayout
	            android:layout_marginLeft="5dp"
	            android:id="@+id/searchmedicine_top" 
	            android:layout_width="170dp"
	            android:layout_height="30dp"
	            android:layout_weight="1"
	            android:layout_toRightOf="@id/doctor_top_search"
	            android:layout_centerVertical="true">
		        <EditText
		            android:id="@+id/searchmedicine_text" 
		            android:layout_width="0dp"
		            android:layout_height="30dp"
		            android:layout_weight="1"
		            android:textSize="12sp"/>
	        </LinearLayout>
			<TextView
			    android:id="@+id/begin_searchmedicine"
			    android:layout_toRightOf="@id/searchmedicine_top"
			    android:layout_gravity="center_vertical"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="搜索"
			    android:textSize="16sp"
			    android:layout_marginLeft="5dp"
			    android:layout_marginTop="5dp"
			    android:alpha="0.3"
			    android:textColor="#000000"/></RelativeLayout>
    </LinearLayout>
    //顶部搜索框*******
    //中上部 药品分类  常用药品  部位药品
